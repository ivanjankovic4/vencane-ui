---
// Fajl: src/pages/activities.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import EventCard from "../components/EventCard.astro";
import trojiceSlika from "../assets/gallery/trojice-2025/slika5.jpg";
import staraCrkvaSlika from "../assets/private-gallery/stara_crkva.jpg";
---

<BaseLayout>
    <main class="page-content">
        <h1>Aktivnosti i Događaji</h1>
        <p class="intro">
            Pregled godišnjih događaja i seoskih slava koje obeležavaju život u
            Venčanima.
        </p>

        <div class="cards-container">
            <EventCard
                title="Seoska Slava - Sveta Trojica"
                description="U našem selu se tradicionalno obeležava drugi dan, Duhovski ponedeljak, kao centralni dan proslave uz okupljanje meštana i gostiju."
                imageUrl={trojiceSlika.src}
                galleryBaseUrl="trojice"
            />

            <EventCard
                title="Proslava Svetog Pantelejmona"
                description="Kod stare crkve brvnare, posvećene Sv. Pantelejmonu, svake godine se okupljaju meštani i gosti. Uz tradicionalno pripremanje gulaša, ovaj dan je simbol zajedništva i očuvanja tradicije."
                imageUrl="/src/assets/private-gallery/stara_crkva.jpg"
                galleryBaseUrl={staraCrkvaSlika.src}
                fixedDate="9. avgust, svake godine"
            />
        </div>
    </main>
</BaseLayout>

<style>
    body {
        overflow-y: auto !important;
        height: auto !important;
    }
    .page-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
        text-align: center;
    }
    .intro {
        max-width: 600px;
        margin: 0 auto 40px auto;
        color: #ccc;
    }
    .cards-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 20px;
    }
</style>
