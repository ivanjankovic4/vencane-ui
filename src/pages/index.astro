---
// Fajl: src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import backgroundImage from '../assets/dji_homepage_picture.jpg';
---
<BaseLayout>
    <div class="background-container" style={`background-image: url(${backgroundImage.src})`}></div>
    
    <main class="hero-content">
        <h1>SELO VENČANE</h1>
        <p class="subtitle">Najsevernija kapija Šumadije, između Kosmaja i Bukulje</p>
        <p class="description">
            Otkrijte Venčane, selo bogate istorije i živahne sadašnjosti, mesto gde se legende prepliću sa pričama o znamenitim ljudima i tradiciji koja traje.
        </p>
        <a href="/o-selu" class="cta-button">Istražite Selo</a>
    </main>
</BaseLayout>

<style>
    .background-container {
        position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1;
        background-size: cover; background-position: center; filter: blur(5px); transform: scale(1.05);
    }
    body { overflow: hidden; }
    .hero-content { 
        height: 100vh; display: flex; flex-direction: column; justify-content: center; 
        align-items: center; text-align: center; padding: 20px;
        background-color: rgba(0, 0, 0, 0.3); 
    }
    .hero-content h1 { 
        font-family: 'Orbitron', sans-serif; font-size: clamp(2.5rem, 8vw, 6rem);
        letter-spacing: 3px; text-transform: uppercase; 
        text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7); margin: 0;
    }
    .hero-content .subtitle {
        font-size: clamp(1rem, 3vw, 1.5rem); margin: 10px 0 20px 0;
        font-weight: 400; text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.7);
    }
    .hero-content .description {
        max-width: 600px; font-size: 1.1rem; line-height: 1.6; margin-bottom: 40px;
    }
    .cta-button {
        display: inline-block; padding: 15px 35px; background-color: white;
        color: black; border: none; border-radius: 5px; text-decoration: none;
        font-weight: bold; font-size: 1rem; transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .cta-button:hover {
        transform: translateY(-3px); box-shadow: 0 4px 15px rgba(255, 255, 255, 0.3);
    }
</style>